<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_previous_orders_coordinatorlayout"
    tools:context=".Activity_Previous_Orders">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/toolbar"
            android:id="@+id/activity_previous_orders_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/activity_previous_orders_progressbar"
            android:indeterminate="true"
            android:backgroundTint="@color/colorAccent"
            android:layout_below="@id/activity_previous_orders_toolbar"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/activity_previous_orders_toolbar"
            android:id="@+id/activity_previous_orders_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>